---
import {ui, name} from "../../i18n/ui";
import ThemeButton from "../ThemeButton.astro";
import LanguageButton from "../LanguageButton.astro";
import { getLangFromUrl } from "../../i18n/utils";
import type {Language} from "../../i18n/types"

const lang:Language = getLangFromUrl(Astro.url);
---
<header class="flex flex-col justify-between min-[30rem]:flex-row items-center text-fallout">
    <div class="SectionHeader__title flex flex-col gap-2 min-[65rem]:flex-row">
        <h3 class="text-4xl font-bold m-1">
            {name}:
        </h3>
        <span class="text-3xl m-1 pt-1">
            {ui[lang].labor}
        </span>
    </div>
    <div class="flex min-[30rem]:flex-col min-[40rem]:flex-row flex-row gap-4">
        <ThemeButton/>
        <LanguageButton/>
    </div>
</header>
<style>
    @import '../../styles/global.css';
</style>